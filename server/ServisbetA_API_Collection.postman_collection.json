            "body": {
              "mode": "raw",
              "raw": "{\n  \"business\": \"{{businessId}}\",\n  \"rating\": 5,\n  \"title\": \"Excellent service!\",\n  \"content\": \"Had an amazing experience. The food was delicious and service was outstanding.\",\n  \"images\": []\n}"
